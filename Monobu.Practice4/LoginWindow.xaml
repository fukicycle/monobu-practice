<Window x:Class="Monobu.Practice4.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monobu.Practice4"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel     Orientation="Horizontal" Margin="10">
                <TextBlock Text="Username" Width="120"/>
                <TextBox x:Name="textBox1" Width="200"/>
            </StackPanel>
            <StackPanel     Orientation="Horizontal" Margin="10">
                <TextBlock Text="Password" Width="120"/>
                <PasswordBox x:Name="passwordBox" Width="200"/>
            </StackPanel>
            <Button x:Name="loginButton" Content="Login" Width="150" Click="loginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
